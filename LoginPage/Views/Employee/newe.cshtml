@model LoginPage.Models.Newemp
<div class="container">
    <center><h1>New Employee Registration</h1></center>
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <form class="form-horizontal" asp-action="newe">
                <div class="form-group">
                    <label class="control-label">Employee ID</label>
                    <input asp-for="id" class="form-control" type="number" required>
                </div>
                <div class="form-group">
                    <label class="control-label">Username</label>
                    <input asp-for="Username" class="form-control" type="text" required />
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" required />
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Register" />
                    <input class="btn btn-primary" type="reset" value="Reset" />
                </div>

            </form>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
@{

    if (TempData["msg"] != null)
    {
        if (TempData["msg"].ToString() == "Yes")
        {
            <script>
                alert("Registration successful! Please relogin")
                window.location.replace("Emplogin")
            </script>
        }
        if (TempData["msg"].ToString() == "No")
        {
            <script>
                alert("Employee does not exist. Contact your admin.")
                window.location.replace("Emplogin")
            </script>
        }
        TempData["msg"] = null;
    }
}