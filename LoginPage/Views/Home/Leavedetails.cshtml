@model LoginPage.Models.Fetchleaves

@{
    ViewData["Title"] = "Leavedetails";
}

<h1>Leave Details</h1>
<script lang="=javascript">
    function approve(p) {
        var c = document.getElementById("comment");
        location.href = "../Approve/" + p;
    }
    function reject(p) {
        var x = window.prompt("Do you really want to reject the leave? Type YES to confirm");
        if (x == "YES")
            location.href = "../Reject/" + p;
        else
            location.href = "Viewleaves";
    }
</script>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Reference Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2">
            Employee Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.empid)
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Startdate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enddate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enddate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Leavetype)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Leavetype)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        @if (!Convert.ToBoolean(Model.verify))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.comment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.comment)
            </dd>
        }
    </dl>
    @if (Convert.ToBoolean(Model.verify))
    {
        <form class="form-vertical" asp-action="Leaveaction">
            <div class="form-group">
                <label class="control-label">Reference Id</label>
                <input type="text" asp-for="id" value="@Model.id" readonly />
            </div>
            <div class="form-inline">
                <label class="control-label p-3">Your answer</label>
                <input asp-for="answer" id="Yes" class="form-control p-2" value="Approve" type="radio" />
                Approve
                <input asp-for="answer" id="No" class="form-control p-2" value="Reject" type="radio" />
                Reject
            </div>
            <div class="form-group">
                <label class="control-label">Comments</label>
                <input asp-for="comment" type="text" />
            </div>
            <div class="form-group">
                <input class="btn btn-outline-info" type="submit" value="Submit" />
            </div>
        </form>
    }
 </div>
