@model LoginPage.Models.Fetchleaves

@{
    ViewData["Title"] = "Leavedetails";
}

<h1>Leave Details</h1>
<script lang="=javascript">
    function approve(p) {
        var c = document.getElementById("comment");
        location.href = "../Approve/" + p;
    }
    function reject(p) {
        var x = window.prompt("Do you really want to reject the leave? Type YES to confirm");
        if (x == "YES")
            location.href = "../Reject/" + p;
        else
            location.href = "Viewleaves";
    }
</script>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Employee" asp-action="empop">Employee Home Page</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="empop">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="#">Privacy</a>
                    </li>
                    <li class="nav-item ml-auto">

                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Reference Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2">
            Employee Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.empid)
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Startdate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enddate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enddate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Leavetype)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Leavetype)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        @if (!Convert.ToBoolean(Model.verify))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.comment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.comment)
            </dd>
        }
    </dl>
    @if (Convert.ToBoolean(Model.verify))
    {
        <form class="form-vertical" asp-action="Leaveaction">
            <div class="form-group">
                <label class="control-label">Reference Id</label>
                <input type="text" asp-for="id" value="@Model.id" readonly />
            </div>
            <div class="form-group">
                <label class="control-label">Comments</label>
                <input asp-for="comment" type="text" />
            </div>
            <div class="form-group">
                <input class="btn btn-outline-success" name="approve" type="submit" value="Approve"/>
                <input class="btn btn-outline-danger" name="reject" type="submit" value="Reject" />
            </div>
        </form>
    }
 </div>
